{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "JupyText Sync",
        "type": "shell",
        "command": "${command:python.interpreterPath} -m jupytext --sync ${file}",
        "group": {
          "kind": "build",
          "isDefault": true
        },
        "problemMatcher": []
      },
      {
        "label": "Fix Quarto Comments",
        "type": "shell",
        "command": "sed -i '' 's/# |/#|/g' ${file}",
        "group": "build",
        "problemMatcher": []
      },
      {
        "label": "Build Masters Thesis Proposal",
        "type": "shell",
        "command": "zsh -c 'source ~/.zshrc; quarto render ${file} --output-dir ../../build && open ${fileDirname}/../../build/${fileBasenameNoExtension}.pdf'",
        "group": {
          "kind": "build",
          "isDefault": true
        },
        "problemMatcher": []
      },
      {
        "label": "Run Gym Trading Environment",
        "type": "shell",
        "command": "zsh -c 'source ~/.zshrc && source venv/bin/activate && ${command:python.interpreterPath} -m pdb ${file}'",
        "group": {
          "kind": "build",
          "isDefault": true
        },
        "problemMatcher": []
      }
    ]
}
